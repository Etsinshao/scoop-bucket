    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/99.0/win64/en-US/Firefox%20Setup%2099.0.exe#/dl.7z",
            "hash": "sha512:136f6dc6b49653a0712af5bfff0714bffac7740902a587c1d1231226e627a10c125e0d7ad2f5045678347394ca816d1454117df0d34817a9235ac778beb085e1"
